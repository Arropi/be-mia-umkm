generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OnlineShopType {
  Blibli
  Tokopedia
  Shopee
  Lazada
  GoJek      @map("Go-Jek")
}

enum MediaSosialType {
  X
  Instagram
  Facebook
  TikTok
}

enum UmkmType {
  Kuliner
  Fashion
  Kerajinan
  Jasa
  Pertanian @map("Bidang Pertanian")
}

enum UserRole {
  admin_umkm     @map("admin_umkm")
  administrator  @map("administrator")
}

model users {
  id         BigInt   @id @default(autoincrement())
  password   String?
  email      String   @unique
  username   String?
  name       String?
  address    String?  @db.Text
  whatsapp   String?
  role       UserRole @default(admin_umkm)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  umkm       umkm[]
}

model umkm {
  id          BigInt   @id @default(autoincrement())
  user_id     BigInt
  type        UmkmType
  name        String
  description String?   @db.Text
  contact     String?
  location    String?   @db.Text
  logo        String?   @db.Text
  gmaps       String?   @db.Text
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user          users          @relation(fields: [user_id], references: [id])
  online_shop   online_shop[]
  umkm_galeri   umkm_galeri[]
  media_sosial  media_sosial[]
}

model online_shop {
  id         BigInt         @id @default(autoincrement())
  umkm_id    BigInt
  type       OnlineShopType
  url        String         @db.Text
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt

  umkm       umkm @relation(fields: [umkm_id], references: [id])
}

model umkm_galeri {
  id         BigInt   @id @default(autoincrement())
  umkm_id    BigInt
  section    String
  img_url    String   @db.Text
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  umkm       umkm @relation(fields: [umkm_id], references: [id])
}

model media_sosial {
  id         BigInt          @id @default(autoincrement())
  umkm_id    BigInt
  type       MediaSosialType
  url        String          @db.Text
  created_at DateTime        @default(now())
  updated_at DateTime        @updatedAt

  umkm       umkm @relation(fields: [umkm_id], references: [id])
}